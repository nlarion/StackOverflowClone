@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Security.Claims
@model StackOverflowClone.Models.Answer

<h2>Add a new Answer</h2>
<hr />
@using (Html.BeginForm())
{
    <input type="hidden" id="QuestionId" name="QuestionId" value="@ViewBag.Question.QuestionId"/>
    @Html.LabelFor(model => model.Name) @Html.TextBoxFor(model => model.Name) <br />
    @Html.LabelFor(model => model.Description)
    @Html.EditorFor(model => model.Description)
    <input type="submit" value="Create" />
}
@Html.ActionLink("Back to List", "Index")